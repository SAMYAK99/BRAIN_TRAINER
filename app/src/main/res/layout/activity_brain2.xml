<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdesign"
    tools:context=".brain2">

    <TextView
        android:id="@+id/timertextview"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="29dp"
        android:background="#E0D660"
        android:fontFamily="@font/aldrich"
        android:text="30s"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/pointstextview"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="28dp"
        android:background="#48CEDB"
        android:fontFamily="@font/aldrich"
        android:text="0/0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sumtextview"
        android:layout_width="235dp"
        android:layout_height="73dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:text="42 + 17 = "
        android:textColor="#021610"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/aldrich"
        app:layout_constraintTop_toBottomOf="@+id/timertextview" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="189dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#B80BD6"
        android:onClick="correctanswer"
        android:tag="0"
        android:text="3"
        android:fontFamily="@font/aldrich"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="189dp"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#D35733"
        android:onClick="correctanswer"
        android:tag="1"
        android:text="3"
        android:fontFamily="@font/aldrich"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="189dp"
        android:layout_height="80dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#D6165C"
        android:onClick="correctanswer"
        android:tag="2"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/aldrich"/>

    <Button
        android:id="@+id/btn3"

        android:layout_width="189dp"
        android:layout_height="80dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#76FF03"
        android:onClick="correctanswer"
        android:tag="3"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/aldrich"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="248dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="104dp"
        android:textAlignment="center"
        android:textColor="#222020"
        android:textSize="30sp"

        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/aldrich"/>

    <Button
        android:id="@+id/playagain"
        android:layout_width="247dp"
        android:layout_height="85dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/edtdesign"
        android:fontFamily="@font/aldrich"
        android:padding="10dp"
        android:text="PLAY AGAIN"
        android:textColor="@android:color/white"
        />

</RelativeLayout>